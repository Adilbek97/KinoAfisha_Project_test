<LinearLayout
    android:id="@+id/linearLayout2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="250dp"
    android:background="@color/colorPrimaryDark"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"

    >
    <ImageView
        android:id="@+id/ic_kinoteatr"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo2" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:id="@+id/teatr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:textStyle="bold"
            tool:text="@string/Title_text" />

        <TextView
            android:id="@+id/teatr_url"
            android:clickable="true"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorURL"
            android:textSize="15sp"
            android:textStyle="bold"
            tool:text="@string/Title_text" />

        <TextView
            android:id="@+id/teatr_adress"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            tool:text="@string/Title_text" />

        <TextView
            android:id="@+id/teatr_phone"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            tool:text="@string/Title_text" />

        <TextView
            android:id="@+id/teatr_vote"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            tool:text="@string/Title_text" />


    </LinearLayout>



</LinearLayout>